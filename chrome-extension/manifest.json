{
  "manifest_version": 3,
  "name": "网页金句图片生成器",
  "version": "1.0.0",
  "description": "将网页文字内容转换为精美图片的Chrome浏览器插件",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.svg",
      "48": "assets/icons/icon48.svg",
      "128": "assets/icons/icon128.svg"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.svg",
    "48": "assets/icons/icon48.svg",
    "128": "assets/icons/icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  }
}